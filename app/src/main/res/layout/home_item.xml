<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <!--   <ImageView
               android:id="@+id/sdv_recruit_avatar"
               android:layout_width="64dp"
               android:layout_height="64dp"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp" />-->

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_recruit_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/ic_home"
            fresco:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical">

            <!--招聘方向-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Android开发"
                    android:textColor="@color/title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_wage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="8dp"
                    android:text="3K-7K"
                    android:textColor="@color/wage" />
            </LinearLayout>
            <!--end-->

            <!--公司名称-->
            <TextView
                android:id="@+id/tv_comp_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingTop="2dp"
                android:text="礼品购"
                android:textColor="@color/sub_title"
                android:textSize="14sp" />
            <!--end-->

            <!--地址 要求-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="杭州 江平区"
                    android:textColor="@color/content"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_exp_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经验不限" />

                    <TextView
                        android:id="@+id/tv_edu_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="学历不限" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pub_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="09月06日"
                    android:textColor="@color/time"
                    android:textSize="13sp" />
            </LinearLayout>
            <!--end-->

            <!--公司信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/tv_finance"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="不需要融资"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/divider" />


                <TextView
                    android:id="@+id/tv_need"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="50-100人"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/divider" />


                <TextView
                    android:id="@+id/tv_comp_type"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="移动互联网"
                    android:textSize="12sp" />

            </LinearLayout>
            <!--end-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/divider" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>